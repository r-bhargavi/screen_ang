            <!--name="Case Sheet Invoice"-->
            <!--action="action_case_sheet_invoice"-->
            <!--sequence="2"-->
         <!--groups="legal_e.group_legal_e_hide_menus"-->
           <!--/>-->
        

    </data>
</odoo>
